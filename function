#Hands on mini project-1

def factorial(n):
    if n == 0 or n == 1:
        return 1
    return n * factorial(n-1)
print(factorial(45))

#Hands on mini project-2

def avg(scores):
    return sum (scores) / len(scores)
print(avg([100,100,100,100,100,100]))

#Hands on mini project-3

def is_prime(n):
    if n <= 1 :
        return False
    for i in range(2, int(n ** 0.5)+ 1):
        if n % i == 0:
            return False
        else:
            return True
print(is_prime(1))